{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build (dev)",
      "command": "cl.exe",
      "args": [
        "/Zi", "/EHsc", "/nologo", "/MDd",
        "/I${workspaceFolder}\\src\\",
        "/I${workspaceFolder}\\include\\",
        "${fileDirname}/**.cpp",
        "/Fe${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
        "/permissive", "/Wall", "/WX",
        "/std:c++latest",
        "/link",
        "/LIBPATH:${workspaceFolder}\\lib\\",
        "raylib\\raylib.lib",
        "winmm.lib", "gdi32.lib", "opengl32.lib", "user32.lib", "kernel32.lib", "shell32.lib", "advapi32.lib", "ucrt.lib"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\bin\\intermediates\\"
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
